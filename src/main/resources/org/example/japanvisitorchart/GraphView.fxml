<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="anchorPane" prefHeight="490.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.japanvisitorchart.GraphController">
   <children>
      <BarChart fx:id="barChart" layoutX="29.0" layoutY="77.0" prefHeight="337.0" prefWidth="543.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
      <Button fx:id="viewTableButton" layoutX="487.0" layoutY="426.0" mnemonicParsing="false" onAction="#switchToTableview" text="View Table" />
      <Text layoutX="180.0" layoutY="74.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Japan National Tourism Organization(JNTO)" />
      <RadioButton fx:id="arrivalBtn" layoutX="63.0" layoutY="430.0" mnemonicParsing="false" onAction="#changeGraph" text="Visitor Arrivals" />
      <RadioButton fx:id="travelerBtn" layoutX="213.0" layoutY="430.0" mnemonicParsing="false" onAction="#changeGraph" text="Overseas Travelers" />
      <Label fx:id="titleLabel" layoutX="57.0" layoutY="27.0" prefHeight="27.0" prefWidth="515.0" text="Label" textAlignment="JUSTIFY">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
